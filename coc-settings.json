{
  /* "coc.preferences.hoverTarget": "echo", */
  /* "coc.preferences.enableFloatHighlight": false,
https://raw.githubusercontent.com/fannheyward/init.vim/master/coc-settings.json
  */
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "cs",
    "markdown",
    "javascript",
    "typescript",
    "json",
    "jsonc"
  ],
  "coc.source.file.ignoreHidden": false,
  "prettier.printWidth": 160,
  "prettier.singleQuote": true,
  "prettier.eslintIntegration": true,
  "codeLens.enable": true,
  "codeLens.guifg": "darkgreen",
  "git.addGBlameToVirtualText": true,
  "signature.target": "echo",
  "diagnostic.messageTarget": "echo",
  "diagnostic.format": "%message [%source]",
  "diagnostic.virtualText": true,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.separateRelatedInformationAsDiagnostics": true,
  "cSpell.language": "en-GB",
  "cSpell.diagnosticLevel": "Hint",
  // Specify file types to spell check.
  "cSpell.enabledLanguageIds": [
    "csharp",
    "javascript",
    "javascriptreact",
    "markdown",
    "plaintext",
    "notes",
    "typescript",
    "typescriptreact",
    "yml"
  ],
  "explorer.icon.enableNerdfont": true,
  "diagnostic.errorSign": "✘",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "ﯦ",
  "coc.preferences.messageLevel": "warning",
  "suggest.timeout": 5000,
  "suggest.asciiCharactersOnly": true,
  "suggest.triggerAfterInsertEnter": true,
  "suggest.floatEnable": false,
  "suggest.noselect": false,
  "snippets.extends": {
    "javascriptreact": [
      "javascript"
    ],
    "typescript": [
      "javascript"
    ]
  },
  "list.normalMappings": {
    "<C-c>": "do:exit"
  },
  "list.insertMappings": {
    "<C-c>": "do:exit"
  },
  "list.source.files.command": "fd",
  "list.source.files.args": [
    "--type",
    "f"
  ],
  "eslint.enable": false,
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": [
    "javascript",
    "typescript",
    "javascriptreact"
  ],
  "calc.replaceOriginalExpression": false,
  "markdownlint.config": {
    "default": true,
    "line-length": false
  },
  "clangd.semanticHighlighting": true,
  "languageserver": {
    /* "ccls": { */
    /*   "command": "ccls", */
    /*   "filetypes": ["c", "cpp", "objc", "objcpp"], */
    /*   "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"], */
    /*   "initializationOptions": { */
    /*     "cache": { */
    /*       "directory": "/tmp/ccls" */
    /*     }, */
    /*     "highlight": { "lsRanges": true } */
    /*   } */
    /* }, */
    /* "rust": { */
    /*   "command": "/Users/fannheyward/.config/coc/extensions/coc-rust-analyzer-data/rust-analyzer", */
    /*   "filetypes": ["rust"], */
    /*   "rootPatterns": ["Cargo.toml", ".git/"], */
    /*   "progressOnInitialization": true */
    /* }, */
    "bash": {
      "command": "bash-language-server",
      "filetypes": [
        "sh"
      ],
      "args": [
        "start"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    }
  }
}
