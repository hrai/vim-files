{
  /* "coc.preferences.hoverTarget": "echo", */
  /* "coc.preferences.enableFloatHighlight": false,
https://raw.githubusercontent.com/fannheyward/init.vim/master/coc-settings.json
  */
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": ["cs", "markdown", "javascript", "typescript", "json", "jsonc", "css", "html", "graphql"],
  "coc.source.file.ignoreHidden": false,
  "prettier.printWidth": 160,
  "prettier.tabWidth": 2,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "codeLens.enable": true,
  "git.addGBlameToVirtualText": true,
  "signature.target": "echo",
  "diagnostic.messageTarget": "echo",
  "diagnostic.format": "%message [%source]",
  "diagnostic.virtualText": true,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.separateRelatedInformationAsDiagnostics": true,
  "cSpell.language": "en-GB",
  "cSpell.diagnosticLevel": "Hint",
  // Specify file types to spell check.
  "cSpell.enabledLanguageIds": ["csharp", "javascript", "javascriptreact", "markdown", "plaintext", "notes", "typescript", "typescriptreact", "yml"],
  "explorer.icon.source": "vim-devicons",
  "explorer.icon.enableNerdfont": true,
  "explorer.file.showHiddenFiles": true,
  "explorer.previewAction.onHover": false,
  "diagnostic.errorSign": "✘",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "ﯦ",
  "coc.preferences.messageLevel": "warning",
  "suggest.timeout": 5000,
  "suggest.asciiCharactersOnly": true,
  "suggest.triggerAfterInsertEnter": true,
  "suggest.floatEnable": false,
  "suggest.noselect": false,
  "suggest.maxCompleteItemCount": 10,
  "snippets.extends": {
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"]
  },
  "go.goplsOptions": {
    "completeUnimported": true
  },
  "list.normalMappings": {
    "<C-c>": "do:exit"
  },
  "list.insertMappings": {
    "<C-c>": "do:exit"
  },
  "list.source.files.command": "fd",
  "list.source.files.args": ["--type", "f"],
  "calc.replaceOriginalExpression": false,
  "markdownlint.config": {
    "default": true,
    "line-length": false
  },
  "powershell.integratedConsole.showOnStartup": false,
  "clangd.semanticHighlighting": true,
  "diagnostic.displayByAle": true,
  "languageserver": {
    /* "ccls": { */
    /*   "command": "ccls", */
    /*   "filetypes": ["c", "cpp", "objc", "objcpp"], */
    /*   "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"], */
    /*   "initializationOptions": { */
    /*     "cache": { */
    /*       "directory": "/tmp/ccls" */
    /*     }, */
    /*     "highlight": { "lsRanges": true } */
    /*   } */
    /* }, */
    /* "rust": { */
    /*   "command": "/Users/fannheyward/.config/coc/extensions/coc-rust-analyzer-data/rust-analyzer", */
    /*   "filetypes": ["rust"], */
    /*   "rootPatterns": ["Cargo.toml", ".git/"], */
    /*   "progressOnInitialization": true */
    /* }, */
    "bash": {
      "command": "bash-language-server",
      "filetypes": ["sh", "zsh"],
      "args": ["start"],
      "ignoredRootPaths": ["~"]
    },
    "sql": {
      "command": "sql-language-server",
      "args": ["up", "--method", "stdio"],
      "filetypes": ["sql", "mysql"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  }
}
